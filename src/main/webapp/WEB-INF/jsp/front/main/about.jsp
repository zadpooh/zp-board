	<script src="/content/js/lib/jquery.touchSlider.js"></script>
	<script src="/content/js/lib/jquery.event.drag-1.5.1.min.js"></script> 
	<script>
	$(document).ready(function() {
		// 상단 인트로
		$(".about-intro .slider-wrap").touchSlider({
			speed: 600,
			btn_prev: $(".about-intro .btn-prev"),
			btn_next: $(".about-intro .btn-next"),
			autoplay: {
				enable: true,
				pauseHover: true,
				addHoverTarget: ".about-intro .paging", // 다른 오버영역 추가 ex) ".someBtn, .someContainer"
				interval: 3500
			},
			initComplete: function() {
				var _this = this;
				var $paging = $(".about-intro .paging");
				var len = Math.ceil(this._len / this._view);

				for(var i = 1; i <= len; i++) {
					$paging.append('<button type="button" class="btn-page">page' + i + '</button>');
				}

				$paging.on('click', '.btn-page', function (e) {
					_this.go_page($(e.target).index());
				});
			},
			counter: function(e) {
				$(".about-intro .btn-page").removeClass("on").eq(e.current-1).addClass("on");
			}
		});

		// Platform FLow
		(function() {
			var $flow = $('.about-flow .flow');

			// IE9에서는 동작 제외
			if($('html').hasClass('IE9')) {
				$flow.find('.before').removeClass('before');
				return false;
			}

			// 모션 완료시 재시작
			$flow.find('.step3 .tit').on('transitionend', function() {
				setTimeout(function() {
					$flow.find('.after').removeClass('after');
					setTimeout(flowMotion, 100);
				}, 3000);
			});

			// 순차 등장 모션
			function flowMotion() {
				if($flow.find('.after').length) {
					return false;
				}

				$flow.find('.step1').addClass('after');

				setTimeout(function() {
					$flow.find('.step2').addClass('after');

					setTimeout(function() {
						$flow.find('.step3').addClass('after');
					}, 1800);
				}, 1200);
			}

			flowMotion();
		})();
	});

	// 주요서비스
	$(window).on('load', function() {
		$(".about-service .slider-wrap").touchSlider({
			speed: 600,
			btn_prev: $(".about-service .btn-prev"),
			btn_next: $(".about-service .btn-next"),
			initComplete: function() {
				var _this = this;
				var $paging = $(".about-service .paging");
				var len = Math.ceil(this._len / this._view);

				for(var i = 1; i <= len; i++) {
					$paging.append('<button type="button" class="btn-page">page' + i + '</button>');
				}

				$paging.on('click', '.btn-page', function (e) {
					_this.go_page($(e.target).index());
				});
			},
			counter: function(e) {
				$(".about-service .btn-page").removeClass("on").eq(e.current-1).addClass("on");
			}
		});
	});
	</script>

